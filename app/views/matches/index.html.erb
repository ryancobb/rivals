<div class="container">
  <%= render "shared/actionbar", { :title => "Matches",
                                   :action => "New",
                                   :action_path => new_match_path,
                                   :action_icon => 'plus' } %>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Date</th>
				<th>Player 1</th>
				<th>Player 2</th>
			</tr>
		</thead>
		<tbody>
		<% @matches.each do |match| %>
			<%= render "match", { :match => match} %>
		<% end %>
		</tbody>
	</table>

 	<%= will_paginate @matches %>
</div>
