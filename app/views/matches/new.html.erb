<div id="match">
	<%= form_tag '/matches', :id => 'match-form' do %>
		<%= render 'player' %>
		<div id="games-widget">
			<%= button_tag "-", :type => "button", :class => "button", :id => "removeGame" %>
			<div class="games">
			</div>
			<%= button_tag "+", :type => "button", :class => "button", :id => "addGame" %>

		</div>
		<%= render 'player_picker' %>
		<%= submit_tag "Save", :id => "submit-button" %>
	<% end %>
</div>

<script>
$(function() {
	Match.initialize();
})
</script>