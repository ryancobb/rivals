<div id="match">
	<%= form_tag '/matches', :id => 'match-form' do %>
		<%= render 'player' %>
		<div id="games-widget">
			<button id="removeGame" class="button">-</button>
			<div class="games">
			</div>
			<button id="addGame" class="button">+</button>
		</div>
		<%= render 'player_picker' %>
		<%= submit_tag "Save", :id => "submit-button" %>
	<% end %>
</div>

<script>
$(function() {
	Match.initialize();
})
</script>